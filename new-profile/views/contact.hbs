{{> header }}
{{> navbar }}
<div class="flex-container">
  <div class="main-container my-4">
    <h1>Get in Touch</h1>

    <form action="/contact" method='post'>
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="name" class="form-control shadow" id="name" />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control shadow" id="email" />
      </div>
      <div class="mb-3">
        <label for="phoneNumber" class="form-label">Phone Number</label>
        <input type="number" class="form-control shadow" id="phoneNumber" />
      </div>
      <div class="mb-3">
        <label for="subject" class="form-label">Subject</label>
        <select id="subject" name="subject" class="form-select shadow">
          <option value="Privacy Policy">Privacy Policy</option>
          <option value="Let's Colaborate">Let's Colaborate</option>
          <option value="Let's Talk">Let's Talk</option>
          <option value="Email Verification">Email Verification</option>
        </select>
      </div>
      <div class="mb-3">
        <label for="message" class="form-label">Example textarea</label>
        <textarea class="form-control shadow" id="message" rows="3"></textarea>
      </div>
      <div class="button-container">
        <button type="button" onclick="onFormSubmit()">Submit</button>
      </div>
    </form>
  </div>
</div>

{{> footer }}